<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/back_gradient"
    tools:context=".View.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="589dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:src="@drawable/logo" />

        <EditText
            android:id="@+id/et_nombre_usuario"
            android:layout_width="330dp"
            android:layout_height="30dp"
            android:layout_marginTop="30dp"
            android:background="@drawable/textbox_back"
            android:drawableLeft="@drawable/ic_perm_identity_black_24dp"
            android:hint="Cedula"
            android:padding="5dp"
            android:text="887798"
            android:textColor="@color/colorLetraTitulo"
            android:textColorHint="@color/colorBlack" />

        <EditText
            android:id="@+id/et_contrasenia"
            android:layout_width="330dp"
            android:layout_height="30dp"
            android:layout_marginTop="30dp"
            android:background="@drawable/textbox_back"
            android:drawableLeft="@drawable/ic_lock_outline_black_24dp"
            android:hint="Password"
            android:inputType="textPassword"
            android:padding="5dp"
            android:text="manchester"
            android:textColor="@color/colorLetraTitulo"
            android:textColorHint="@color/colorBlack" />

        <Button
            android:layout_width="330dp"
            android:layout_height="40dp"
            android:layout_marginTop="30dp"
            android:background="@drawable/buttonlogin_back"
            android:text="Login"
            android:textColor="@color/colorPrimary"
            android:textSize="18dp"
            android:id="@+id/bt_login"/>

        <Button
            android:layout_width="330dp"
            android:layout_height="40dp"
            android:layout_marginTop="30dp"
            android:background="@drawable/buttonlogin_back"
            android:text="Registrate aqui"
            android:textColor="@color/colorPrimary"
            android:textSize="18dp"
            android:id="@+id/bt_registrarse"/>


    </LinearLayout>
</android.support.constraint.ConstraintLayout>
    
    
    